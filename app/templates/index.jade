    <% if (includeBootstrap) {
      var bs = '/bower_components/';

      if (includeSass) {
        bs += 'bootstrap-sass-official/assets/javascripts/bootstrap/';
      } else {
        bs += 'bootstrap/js/';
      } %>
    // build:js scripts/plugins.js
    script(src='<%= bs %>affix.js')
    script(src='<%= bs %>alert.js')
    script(src='<%= bs %>dropdown.js')
    script(src='<%= bs %>tooltip.js')
    script(src='<%= bs %>modal.js')
    script(src='<%= bs %>transition.js')
    script(src='<%= bs %>button.js')
    script(src='<%= bs %>popover.js')
    script(src='<%= bs %>carousel.js')
    script(src='<%= bs %>scrollspy.js')
    script(src='<%= bs %>collapse.js')
    script(src='<%= bs %>tab.js')
    // endbuild
    <% } %>
