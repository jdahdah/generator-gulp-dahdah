doctype html
html(lang='')<% if (includeModernizr) { %>.no-js<% } %>
  head

    // Project: <%= fullname %> 
    // Author: <%= author %> 

    // Built with the Dahdah Design Yeoman Generator by Jerome Dahdah 
    // Get a copy at https://github.com/jdahdah/generator-gulp-dahdah/ 

    meta(charset='utf-8')
    meta(name='description' content='')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title <%= fullname %>
    // Place favicon.ico and apple-touch-icon.png in the root directory

    // build:css styles/vendor.css
